<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6E6E6"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/fragment_addingpictures_item_textview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="sdf"/>

    <ImageView
        android:id="@+id/fragment_addingpictures_item_imageview_picture"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/fragment_addingpictures_item_button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/redGoogle"
        android:text="Delete"/>

</LinearLayout>