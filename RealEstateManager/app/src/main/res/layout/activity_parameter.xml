<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ParameterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_ascendant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="#ffff"
                android:text="Croissant"/>

            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_descendant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textColor="#ffff"
                android:text="Decroissant"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/test_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Prix"/>

            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_nbofrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Nombre de salles"/>

            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_nbofbedrooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Nombre de chambres"/>

            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Surface"/>

            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_marketingdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Date de mise sur le marché"/>

            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_dateofsale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Date de vente"/>

        </RadioGroup>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <!--    NB OF PHOTOS     -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Prix"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_parameter_textview_pricemin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="0"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/activity_parameter_textview_pricemax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/activity_parameter_seekbar_price_min"
                android:progressBackgroundTint="#2196F3"
                android:thumbTint="#2196F3"
                android:progressTint="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="500000"/>

            <SeekBar
                android:id="@+id/activity_parameter_seekbar_price_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumbTint="#2196F3"
                android:progressTint="#2196F3"
                android:progressBackgroundTint="#ffff"
                android:max="500000"/>
        </LinearLayout>

    <!--        NbOfRooms -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Nombre de salles"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_parameter_textview_nbOfRoomsmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="0"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/activity_parameter_textview_nbOfRoomsmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/activity_parameter_seekbar_nbOfRoomsMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="#2196F3"
                android:thumbTint="#2196F3"
                android:progressTint="#ffff"
                android:max="5"/>

            <SeekBar
                android:id="@+id/activity_parameter_seekbar_nbOfRoomsMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumbTint="#2196F3"
                android:progressTint="#2196F3"
                android:progressBackgroundTint="#ffff"
                android:max="5"/>
        </LinearLayout>

    <!--        NbOfBedRooms -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Nombre de chambres"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_parameter_textview_nbOfBedRoomsmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="0"/>

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

            <TextView
                android:id="@+id/activity_parameter_textview_nbOfBedRoomsmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/activity_parameter_seekbar_nbOfBedRoomsMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="#2196F3"
                android:thumbTint="#2196F3"
                android:progressTint="#ffff"
                android:max="5"/>

            <SeekBar
                android:id="@+id/activity_parameter_seekbar_nbOfBedRoomsMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumbTint="#2196F3"
                android:progressTint="#2196F3"
                android:progressBackgroundTint="#ffff"
                android:max="5"/>
        </LinearLayout>

        <!--        area     -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Surface"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_parameter_textview_areamin"
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="0"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/activity_parameter_textview_areamax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/activity_parameter_seekbar_areaMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressBackgroundTint="#2196F3"
                android:thumbTint="#2196F3"
                android:progressTint="#ffff"
                android:max="100"/>

            <SeekBar
                android:id="@+id/activity_parameter_seekbar_areaMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumbTint="#2196F3"
                android:progressTint="#2196F3"
                android:progressBackgroundTint="#ffff"/>
        </LinearLayout>

        <!--    NB OF PHOTOS     -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Nombres de photos"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_parameter_textview_nbofpicturesmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="0"/>

           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>

            <TextView
                android:id="@+id/activity_parameter_textview_nbofpicturesmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/activity_parameter_seekbar_nbof_pictures_min"
                android:progressBackgroundTint="#2196F3"
                android:thumbTint="#2196F3"
                android:progressTint="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"/>

            <SeekBar
                android:id="@+id/activity_parameter_seekbar_nbof_pictures_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumbTint="#2196F3"
                android:progressTint="#2196F3"
                android:progressBackgroundTint="#ffff"
                android:max="10"/>
        </LinearLayout>

        <!--    Created Date     -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mise sur le marché"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <!--    Created Date minimum     -->
            <ImageView
                android:id="@+id/activity_parameter_imageview_createdatmin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_date_range_24"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activity_parameter_edittext_createdatmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="De"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!--    Created Date maximum     -->
            <ImageView
                android:id="@+id/activity_parameter_imageview_createdatmax"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_date_range_24"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activity_parameter_edittext_createdatmax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="A"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!--    Address     -->
        <Button
            android:id="@+id/activity_parameter_button_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selectionner un lieu de reference"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/activity_parameter_edittext_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Autour de cette address"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="A proximité de :"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/activity_parameter_linearlayout_nearbypoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>


        <!--    realEstateAgent     -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/activity_parameter_edittext_realEstateAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="realEstateAgent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--    isSold     -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Affiché les propriétés:"
            android:textStyle="bold"
            android:textSize="28sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendu"
                android:textSize="22sp"/>

            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponnible"
                android:textSize="22sp"/>
            <RadioButton
                android:id="@+id/activity_parameter_radiobutton_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Tous"
                android:textSize="22sp"/>

        </RadioGroup>

        <!--    Date of sale     -->
        <LinearLayout
            android:id="@+id/activity_parameter_linearlayout_dateofsale"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date de vente"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <!--    Date of sale minimum     -->
                <ImageView
                    android:id="@+id/activity_parameter_imageview_dateofsalemin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_date_range_24"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/activity_parameter_edittext_dateofsalemin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="De"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!--    Date of sale maximum     -->
                <ImageView
                    android:id="@+id/activity_parameter_imageview_dateofsalemax"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_date_range_24"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/activity_parameter_edittext_dateofsalemax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="A"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/activity_parameter_button_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="FILTRER"
            android:textStyle="bold"
            android:textSize="30sp"/>
    </LinearLayout>

</ScrollView>