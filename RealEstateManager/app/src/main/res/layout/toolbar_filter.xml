<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/redGoogle"
            android:background="@drawable/background_textview_filter"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Add Filter"
            android:textColor="#ffff"
            android:elevation="3dp"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_Filter"
            android:name="com.openclassrooms.realestatemanager.ui.fragments.Filter.FilterFragment"/>

</LinearLayout>